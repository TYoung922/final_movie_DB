<div class="author">
  <h1 class="author__heading">Welcome to my movie Database</h1>
  <p class="author__body">browse this list of movies and add your own.</p>
</div>

<img
  src="https://payload.cargocollective.com/1/11/367710/13568488/MOVIECLASSICSerikweb_2500_1340_c.jpg"
  alt="movie collage"
/>

<section class="articles">
  <h2 class="articles__heading">Latest Posts</h2>
  <!-- Dummy data displayed until we include posts later on. -->
  <ul class="article-ul">
    <% data.forEach(post => { %>
    <li>
      <a href="/post/<%= post._id %>">
        <span><%- post.title %></span>
        <span class="article-list__date">
          <% post.createdAt.toDateString() %>
        </span>
      </a>
    </li>
    <%}) %>
  </ul>

  <% if (nextPage !== null) { %>
  <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
  <% } %>
  <!-- if prevPage is 1 then go to / -->
  <% if (prevPage >= 1) { %> <% if (prevPage === 1) { %>
  <a href="/" class="pagination newer">View Newer Posts &gt;</a>
  <% } else { %>
  <a href="/?page=<%= prevPage %>" class="pagination newer"
    >View Newer Posts &gt;</a
  >
  <% } %> <% } %>

  <!-- <a href="#" class="pagination"> &lt; View Older Posts </a> -->
</section>
